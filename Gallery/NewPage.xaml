<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gallery.NewPage"
             Title="NewPage">
    <VerticalStackLayout Spacing="10" Padding="10">
        <Button Text="Select File" Clicked="SelectedFileClicked" />
        <Image x:Name="ImageDiesplay" MaximumHeightRequest="300"/>
        <Entry Placeholder="Name" x:Name="EName"/>
        <Entry Placeholder="Tags" x:Name="ETags"/>
        <Entry Placeholder="Description" x:Name="EDesc"/>
        <Button Text="Upload" Clicked="Upladed"/>
    </VerticalStackLayout>
</ContentPage>